#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    int longestBalanced(string s) {
        int n = s.size();
        int maxLen = 0;

        for (int i = 0; i < n; i++) {
            int count[3] = {0};  // a, b, c

            for (int j = i; j < n; j++) {
                count[s[j] - 'a']++;

                int mn = INT_MAX, mx = 0;

                for (int k = 0; k < 3; k++) {
                    if (count[k] > 0) {
                        mn = min(mn, count[k]);
                        mx = max(mx, count[k]);
                    }
                }

                if (mn == mx) {
                    maxLen = max(maxLen, j - i + 1);
                }
            }
        }

        return maxLen;
    }
};
