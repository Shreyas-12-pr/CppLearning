#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    string makeLargestSpecial(string s) {
        vector<string> substrings;
        int count = 0, start = 0;

        for (int i = 0; i < s.size(); i++) {
            if (s[i] == '1') count++;
            else count--;

            // Found a balanced substring
            if (count == 0) {
                // Recursively process inner substring
                string inner = s.substr(start + 1, i - start - 1);
                substrings.push_back("1" + makeLargestSpecial(inner) + "0");
                start = i + 1;
            }
        }

        // Sort in descending lexicographical order
        sort(substrings.begin(), substrings.end(), greater<string>());

        // Concatenate
        string result;
        for (string &str : substrings)
            result += str;

        return result;
    }
};